{
    "rule": {
        "prefix": "rule",
        "description": "Rule definition",
        "body": [
            "# Description: ${2}",
            "Rule '${1}' {",
            "\t$0",
            "}"
        ]
    },
    "ruleIf": {
        "prefix": "rule-if",
        "description": "Rule definition with script precondition",
        "body": [
            "# Description: ${2}",
            "Rule '${1}' -If { ${3} } {",
            "\t$0",
            "}"
        ]
    },
    "ruleType": {
        "prefix": "rule-type",
        "description": "Rule definition with type precondition",
        "body": [
            "# Description: ${2}",
            "Rule '${1}' -Type '${3}' {",
            "\t$0",
            "}"
        ]
    },
    "ruleExtended": {
        "prefix": "rule-extended",
        "description": "Rule definition with script precondition and tags",
        "body": [
            "# Description: ${2}",
            "Rule '${1}' -If { ${3} } -Tag @{ ${4} } {",
            "\t$0",
            "}"
        ]
    },
    "anyOf": {
        "prefix": "anyOf",
