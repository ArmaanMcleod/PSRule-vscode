{
    "name": "psrule-vscode-preview",
    "displayName": "PSRule",
    "version": "0.0.1",
    "publisher": "bewhite",
    "description": "An extension for IT Pros using the PSRule PowerShell module.",
    "author": {
        "name": "Bernie White"
    },
    "engines": {
        "vscode": "^1.30.0"
    },
    "license": "SEE LICENSE IN LICENSE",
    "homepage": "https://github.com/BernieWhite/PSRule-vscode/blob/master/README.md",
    "categories": [
        "Other",
        "Snippets"
    ],
    "keywords": [
        "PowerShell"
    ],
    "galleryBanner": {
        "color": "#0072c6",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/BernieWhite/PSRule-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/BernieWhite/PSRule-vscode/issues"
    },
    "private": true,
    "preview": true,
    "activationEvents": [
        "onLanguage:powershell"
    ],
    "badges": [
        {
            "description": "PSRule extension version",
            "href": "https://marketplace.visualstudio.com/items?itemName=bewhite.psrule-vscode-preview",
            "url": "https://vsmarketplacebadge.apphb.com/version/bewhite.psrule-vscode-preview.svg"
        },
        {
            "description": "PSRule extension installs",
            "href": "https://marketplace.visualstudio.com/items?itemName=bewhite.psrule-vscode-preview",
            "url": "https://vsmarketplacebadge.apphb.com/installs-short/bewhite.psrule-vscode-preview.svg"
        }
    ],
    "main": "./out/extension/extension",
    "contributes": {
        "snippets": [
            {
                "language": "powershell",
                "path": "./snippets/PSRule.json"
            }
        ],
        "yamlValidation": [
            {
                "fileMatch": "PSRule.yaml",
                "url": "./schemas/PSRule-options-0.3.0.schema.json"
            },
            {
                "fileMatch": "PSRule.yml",
                "url": "./schemas/PSRule-options-0.3.0.schema.json"
            },
            {
                "fileMatch": "psrule.yml",
                "url": "./schemas/PSRule-options-0.3.0.schema.json"
            },
            {
                "fileMatch": "psrule.yaml",
                "url": "./schemas/PSRule-options-0.3.0.schema.json"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -v && tsc -p ./ && tslint -p ./",
        "compile-watch": "tsc -watch -p ./",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "vscode-languageclient": "^5.1.1"
    },
    "extensionDependencies": [
        "vscode.powershell",
        "redhat.vscode-yaml"
    ],
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "~10.7.1",
        "mocha": "^4.0.1",
        "tslint": "~5.11.0",
        "typescript": "~3.0.1",
        "vsce": "~1.56.0",
        "vscode": "^1.1.21"
    }
}
